@{
    ViewBag.Title = "Questions"; Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Globalization; @{
    CultureInfo french = new CultureInfo("fr-FR");
}
@model IEnumerable<Question>;

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="">Accueil</a></li>
            <li class="breadcrumb-item active">Question</li>
        </ol>
    </nav>
</div>
<!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Liste des Questions</h5>

                    <!-- Table with stripped rows -->
                    <div class="datatable-wrapper datatable-loading no-footer sortable searchable fixed-columns">
                        <div class="datatable-top">
                           
                            <div class="datatable-search">
                                <a class="btn btn-outline-primary" href="@Url.Action("create", "Question")">Ajouter</a>
                            </div>
                        </div>
                        <div class="datatable-container">
                            <table id="datatable" class="display">
                                <thead>
                                    <tr>
                                        <th>Id </th>
                                        <th>Libelle</th> 
                                        <th>Activé</th> 
                                        <th>Axe</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                 
                                    @foreach (var question in Model)
                                    {
                                        <tr >
                                            <td>@question.id</td>
                                            <td>@question.libelle</td>
                                            <td>
                                                @(question.isEnabled? Html.Raw("<span class=\"badge bg-success\">Activé</span>"): 
                                                 Html.Raw("<span class=\"badge bg-danger\">Desactivé</span>"))
                                            </td> 
                                            <td>
                                                @(question.axeEval != null? Html.Raw($"<a>{question.axeEval.name}</a>"): Html.Raw("N/A"))
                                            </td>
                                            <td>
                                                <a class="btn btn-outline-success" href="@Url.Action("edit","Question",new { id =question.id})">Modifier</a> |
                                                <a class="btn btn-outline-danger" href="@Url.Action("delete","Question",new { id =question.id})">supprimer</a>
                                            </td>
                                        </tr>
                                         


                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- End Table with stripped rows -->
                </div>
            </div>
        </div>
    </div>
</section>
