@model Poste

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container">

    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h1>Ajouter un poste</h1>
            </div>



            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-theme-6" })
                <div class="row">
                    <div class="mb-3 col-md-6">
                        @Html.LabelFor(m => m.libelle, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.libelle, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.libelle, "", new { @class = "text-danger" })
                    </div> 
                    <div class="mb-3 col-md-6">
                        @Html.LabelFor(m => m.Direction, new { @class = "form-label" })
                        @Html.DropDownListFor(m => m.Direction,(SelectList) ViewBag.DirectionsList, "Selectionner une Direction", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Direction, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            }
        </div>
    </div>
</div>